                onDismissed: (direction) async {
                  try {
                    await _conversationService.deleteConversation(conv.id);
                    if (mounted) {
                      ScaffoldMessenger.of(context).showSnackBar(
                        SnackBar(content: Text('Deleted "${conv.title}"')),
