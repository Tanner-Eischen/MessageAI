    final cutoff = now - seconds;
    return (select(aiAnalysis)
          ..where((a) => a.analysisTimestamp.isBiggerOrEqualValue(cutoff))
          ..orderBy([(a) => OrderingTerm.desc(a.analysisTimestamp)]))
        .get();
