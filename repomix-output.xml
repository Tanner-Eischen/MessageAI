        final analysis = AiAnalysisCompanion.insert(
          id: _uuid.v4(),
          messageId: data['message_id'] as String,
          tone: data['tone'] as String,
          urgencyLevel: Value(data['urgency_level'] as String?),
          intent: Value(data['intent'] as String?),
