export interface DraftAnalysisContext {
  draftMessage: string;
  conversationHistory?: string[];
  relationshipType?: 'boss' | 'colleague' | 'friend' | 'family' | 'client' | 'none';
  conversationTone?: string; // From previous tone analysis
  recipientInfo?: {
    name?: string;
    role?: string;
  };
