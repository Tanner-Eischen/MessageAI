      required:
        - id
        - conversation_id
        - body

    MessageResponse:
      type: object
      description: Server response after sending a message
      properties:
        id:
          type: string
          format: uuid
          description: Message ID
        conversation_id:
          type: string
          format: uuid
          description: Conversation ID
        sender_id:
          type: string
          format: uuid
          description: ID of message sender
        body:
          type: string
          description: Message content
