    final minutes = typicalResponseTime! ~/ 60;
    if (minutes < 60) return '$minutes min';

    final hours = minutes ~/ 60;
    if (hours < 24) return '$hours hr';

    final days = hours ~/ 24;
    return '$days days';
  }
