  ON conversation_context_cache FOR SELECT
  USING (auth.uid() = user_id);

CREATE POLICY "Users can manage their own context cache"
  ON conversation_context_cache FOR ALL
  USING (auth.uid() = user_id);

-- Safe topics: users can manage their own
